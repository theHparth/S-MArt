<div class="container mt-5">
 
  <h1 style="font-family:Georgia; color: brown; font-size: 60px;">Sign Up</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/users/signup" method="POST" id="usersignup-form">
            <div class="form-group">
              <label for="useremail">Email</label>
 <label for="useremail"><input  type="email" class="form-control" placeholder="Enter Email" name="email" id="useremail" value="{{user.email}}" required ></label>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
 <label for="password"><input type="password" class="form-control" placeholder="Enter Password" name="password" id="password" value="{{user.password}}" required></label>
            </div>
            <div class="form-group">
              <label for="userfirstname">First name</label>
 <label for="userfirstname"><input type="text" class="form-control" placeholder="Enter firstname" name="firstname" id="userfirstname" value="{{user.firstname}}" required></label>
             </div>
            <div class="form-group">
              <label for="userlastname">Last name</label>
<label for="userlastname"><input  type="text" class="form-control" placeholder="Enter lastname" name="lastname" id="userlastname" value="{{user.lastname}}" required></label>
            </div>
            <div class="form-group">
            <label for="useraddress">Address</label>
<label  for="useraddress"><input type="text" class="form-control" placeholder="Enter address" name="address" id="useraddress" value="{{user.address}}" required></label>
            </div>

            <div class="form-group">
            <label for="usercity">City</label>
 <label for="usercity" ><input type="text" class="form-control" placeholder="Enter city" name="city" id="usercity" value="{{user.city}}" required></label>
            </div>
             <div class="form-group">
            <label for="userzipcode">Zipcode</label>
 <label for="userzipcode"><input  type="text" class="form-control" placeholder="Enter zipcode" name="zipcode" id="userzipcode" pattern="[0-9]{5}" value="{{user.zipcode}}" required></label>
         </div>
            <button type="submit" class="btn btn-dark" style="font-family:Georgia; color: white; font-size: 20px;">Sign Up</button>
          </form>
 <a href="/users/login" style="font-family:Georgia; color: brown; font-size: 20px;">have an account? Click here to Signin</a>
 <div id="errorDiv"  ><p>{{message}}</p>
        </div>
      </div>
    </div>

 

  </div>

</div>
