<article class = "Sign-up">
  <div class="container mt-5">
   
        <h1 class = "Signup-heading" style="font-family:Georgia; color: Brown; font-size: 60px;">
            Sign-up
        </h1>
    
    <div class="row">
    <div class="col-sm-8">
    <div class="card">
    <div class="card-body"> 
      <form action = "/shop/signup" method ="POST" id = "signup-form">
    <div class="form-group">
    <label class = "user-text" for = "shopName" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Shop Name:
        </label>
        <input name = "ShopName"  class="form-control" id = "shopName" type = "text">
        <br>
        </div>
        <div class="form-group">
        <label class = "user-text" for = "username" style="font-family:Georgia; color: Brown; font-size: 20px;">
            User Name :
        </label>
        <input name = "username"  class="form-control" id = "username" type = "text">
        <br>
        </div>
        <div class="form-group">
        <label class = "user-text" for = "ownerFirstname" style="font-family:Georgia; color: Brown; font-size: 20px;">
            First Name:
        </label>
        <input name = "ownerFirstname"  class="form-control" id = "ownerFirstname" type = "text" >
        <br>
        </div>
        <div class="form-group">
        <label class = "password-text" for = "ownerLastname" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Last Name :
        </label>
        <input name = "ownerLastname"  class="form-control" id = "ownerLastname" type = "text">
        <br>
        </div>
        <div class="form-group">
        <label class = "password-text" for = "Address" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Address :
        </label>
        <input name = "Address"  class="form-control" id = "Address" type = "text">
        <br>
        </div>
        <div class="form-group">
        <label class = "password-text" for = "email" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Email :
        </label>
        <input name = "email"  class="form-control" id = "email" type = "email">
        <br>
        </div>
        <div class="form-group">
        <label class = "password-text" for = "pincode" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Pincode :
        </label>
        <input name = "pincode"  class="form-control" id = "pincode" type = "number">
        <br>
        </div>
        <div class="form-group">
        <label class = "password-text" for = "phoneNumber" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Phone number :
        </label>
        <input name = "phoneNumber" class="form-control" id = "phoneNumber" type = "number">
        <br>
        </div>
        <div class="form-group">
        <label class = "password-text" for = "spassword" style="font-family:Georgia; color: Brown; font-size: 20px;">
            Password : 
        </label>
        <input name = "password"  class="form-control" id = "spassword" type = "password" placeholder="Password">
        <br>
        </div>
        {{!-- <input class = "signup-button" type = "submit" value = "Sign up"> --}}
        <button type="submit" class="btn btn-dark" style="font-family:Georgia; color: white; font-size: 20px;">Sign up</button>
    </form>
    {{#if error}}
    <p class = "error">{{error}}</p>
    {{/if}}

<a href="/shop/login" aria-label="More on Using Meaningful Link Text" style="font-family:Georgia; color: Brown; font-size: 15px;">Existing user? Click here to login</a>

    


<p id = "success-signup" hidden>Account created successfully</p>
